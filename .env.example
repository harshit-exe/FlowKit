# ============================================
# DATABASE
# ============================================

# MySQL database connection URL
# Format: mysql://USER:PASSWORD@HOST:PORT/DATABASE
# For SSL connection, append: ?sslaccept=strict
# Example providers: Aiven, PlanetScale, Railway, Local MySQL
DATABASE_URL="mysql://user:password@localhost:3306/flowkit"


# ============================================
# NEXTAUTH CONFIGURATION (REQUIRED)
# ============================================

# The base URL of your application
# Development: http://localhost:3000
# Production: https://yourdomain.com
NEXTAUTH_URL="http://localhost:3000"

# NextAuth secret for JWT encryption
# Generate a secure secret with: openssl rand -base64 32
# IMPORTANT: Keep this secret and unique per environment!
NEXTAUTH_SECRET="your-super-secret-key-change-this-in-production"


# ============================================
# AI SERVICES
# ============================================

# Google Gemini API Key for AI workflow generation
# Get your key: https://aistudio.google.com/app/apikey
GEMINI_API_KEY="your-gemini-api-key"

# Groq AI API Key (for workflow thumbnail/image prompt generation)
# Get your key: https://console.groq.com/
GROQ_API_KEY="your-groq-api-key"


# ============================================
# EMAIL SERVICE
# ============================================

# Resend API Key for sending transactional emails
# Get your key: https://resend.com/api-keys
# Used for: notifications, OTP, welcome emails
RESEND_API_KEY="re_123456789"

# Optional: Nodemailer SMTP Configuration (alternative to Resend)
# Uncomment and configure if using Nodemailer instead
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"
# SMTP_FROM="noreply@yourdomain.com"


# ============================================
# IMAGE MANAGEMENT
# ============================================

# Cloudinary for workflow images and thumbnails
# Get credentials: https://cloudinary.com/console
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"


# ============================================
# ACCESS CONTROL
# ============================================

# Enable/disable the access gate/waitlist feature
# Set to "true" to require access codes for new users
# Set to "false" to allow open access
NEXT_PUBLIC_ENABLE_ACCESS_GATE="false"


# ============================================
# ANALYTICS (OPTIONAL)
# ============================================

# Microsoft Clarity for user behavior analytics
# Get your Project ID: https://clarity.microsoft.com/
NEXT_PUBLIC_CLARITY_PROJECT_ID="your-clarity-project-id"

# Note: Vercel Analytics is automatically enabled when deployed to Vercel
# No additional configuration needed

