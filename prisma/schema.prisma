// FlowKit - Prisma Schema
// Database: MySQL (Aiven Cloud)

datasource db {
  provider     = "mysql"
  relationMode = "prisma" // For compatibility with serverless databases
  url          = env("DATABASE_URL")
  directUrl    = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// WORKFLOWS
model Workflow {
  id                  String   @id @default(cuid())
  slug                String   @unique
  name                String
  description         String   @db.Text
  icon                String?
  thumbnail           String?
  videoUrl            String?
  documentLink        String?
  author              String?    // Name of the creator
  authorUrl           String?    // Link to creator's profile (LinkedIn, X, etc.)
  difficulty          Difficulty @default(BEGINNER)
  featured            Boolean    @default(false)
  indiaBadge          Boolean    @default(false)
  nodeCount           Int        @default(0)
  views               Int        @default(0)
  downloads           Int        @default(0)
  workflowJson        Json       // Stores the complete n8n JSON

  // Arrays stored as JSON
  useCases            Json       // Array of strings
  setupSteps          Json       // Array of strings
  credentialsRequired Json       // Array of strings
  nodes               Json       // Array of node names

  // Relationships
  categories          WorkflowCategory[]
  tags                WorkflowTag[]
  bundles             BundleWorkflow[]
  
  // Community
  comments            Comment[]
  votes               Vote[]
  savedBy             SavedWorkflow[]
  
  // Portfolio
  portfolioEntries    PortfolioWorkflow[]

  // Metadata
  published           Boolean    @default(false)
  createdAt           DateTime   @default(now())
  updatedAt           DateTime   @updatedAt
  publishedAt         DateTime?

  @@index([slug])
  @@index([featured])
  @@index([difficulty])
  @@index([published])
  @@index([createdAt])
  @@index([views])
  @@index([published, createdAt])
  @@index([published, views])
  @@map("workflows")
}

// CATEGORIES
model Category {
  id          String     @id @default(cuid())
  slug        String     @unique
  name        String
  icon        String
  description String?
  color       String     @default("#667eea")
  order       Int        @default(0)
  workflows   WorkflowCategory[]

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([slug])
  @@index([order])
  @@map("categories")
}

// TAGS
model Tag {
  id        String     @id @default(cuid())
  name      String     @unique
  slug      String     @unique
  workflows WorkflowTag[]

  createdAt DateTime   @default(now())

  @@index([slug])
  @@map("tags")
}

// JUNCTION TABLES
model WorkflowCategory {
  workflow     Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  workflowId   String
  category     Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId   String

  @@id([workflowId, categoryId])
  @@index([workflowId])
  @@index([categoryId])
  @@map("workflow_categories")
}

model WorkflowTag {
  workflow     Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  workflowId   String
  tag          Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)
  tagId        String

  @@id([workflowId, tagId])
  @@index([workflowId])
  @@index([tagId])
  @@map("workflow_tags")
}

// N8N NODES (official node types for AI builder)
model N8nNode {
  id              String    @id @default(cuid())
  name            String    // Display name (e.g., "HTTP Request")
  type            String    @unique // Node type identifier (e.g., "n8n-nodes-base.httpRequest")
  category        String    // Category (e.g., "Core Nodes", "Trigger Nodes")
  description     String    @db.Text // What the node does
  icon            String?   // Icon identifier
  parameters      Json      // Common parameters schema
  credentials     Json      // Required credentials
  isPremium       Boolean   @default(false)
  isDeprecated    Boolean   @default(false)
  docUrl          String?   // Link to official docs

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([type])
  @@index([category])
  @@map("n8n_nodes")
}

// ADMIN USERS (for admin panel) -> Now General Users
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?   // Hashed with bcrypt (optional for OAuth)
  role          Role      @default(USER)

  accounts      Account[]
  sessions      Session[]
  
  // Portfolio fields
  username          String?   @unique  // Public username for portfolio URL
  bio               String?   @db.Text // Short bio
  location          String?            // City, Country
  websiteUrl        String?            // Personal website
  linkedinUrl       String?            // LinkedIn profile
  twitterHandle     String?            // X/Twitter handle
  githubUrl         String?            // GitHub profile
  portfolioEnabled  Boolean   @default(false) // Public portfolio visibility
  portfolioTheme    String    @default("default") // Theme customization
  
  // Stats (calculated fields)
  totalWorkflows    Int       @default(0)
  totalViews        Int       @default(0)
  totalDownloads    Int       @default(0)
  communityRating   Float     @default(0.0)
  
  // Community relations
  comments      Comment[]
  votes         Vote[]
  savedWorkflows SavedWorkflow[]
  
  // Portfolio relations
  badges            UserBadge[]
  portfolioWorkflows PortfolioWorkflow[]
  receivedReviews   ClientReview[] @relation("ReviewReceiver")
  givenReviews      ClientReview[] @relation("ReviewGiver")

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([username])
  @@index([portfolioEnabled])
  @@map("users")
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@id([identifier, token])
  @@map("verification_tokens")
}

model Comment {
  id        String   @id @default(cuid())
  content   String   @db.Text
  userId    String
  workflowId String
  parentId  String?  // For nested comments

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  workflow  Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  parent    Comment? @relation("CommentReplies", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  replies   Comment[] @relation("CommentReplies")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([workflowId])
  @@index([parentId])
  @@map("comments")
}

model Vote {
  id         String   @id @default(cuid())
  type       VoteType
  userId     String
  workflowId String

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  workflow  Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, workflowId])
  @@index([userId])
  @@index([workflowId])
  @@map("votes")
}

enum VoteType {
  UPVOTE
  DOWNVOTE
}

model SavedWorkflow {
  id        String   @id @default(cuid())
  userId    String
  workflowId String

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  workflow  Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userId, workflowId])
  @@index([userId])
  @@index([workflowId])
  @@map("saved_workflows")
}

// ENUMS
enum Difficulty {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}

// ... (Waitlist, Bundle, BundleWorkflow, SystemSetting, WorkflowSubmission remain same) ...

// WAITLIST (for access gate)
model Waitlist {
  id           String    @id @default(cuid())
  email        String    @unique
  accessCode   String    @unique // 6-digit access code
  hasAccessed  Boolean   @default(false) // Track if they've used the code
  accessedAt   DateTime? // When they first accessed the site

  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([email])
  @@index([accessCode])
  @@map("waitlist")
}

// BUNDLES (curated collections of workflows)
model Bundle {
  id              String   @id @default(cuid())
  slug            String   @unique
  name            String
  description     String   @db.Text
  objective       String   @db.Text // Main goal/purpose of the bundle
  thumbnail       String?  // AI-generated or custom image
  aiImagePrompt   String?  @db.Text // Prompt used for AI image generation
  icon            String?  // Emoji icon
  color           String   @default("#667eea") // Theme color for UI
  featured        Boolean  @default(false)
  order           Int      @default(0) // Display order
  views           Int      @default(0)

  // Bundle-specific metadata
  benefits        Json     // Array of key benefits/features
  targetAudience  String?  @db.Text // Who is this bundle for
  estimatedTime   String?  // e.g., "30 minutes setup"

  // Relationships
  workflows       BundleWorkflow[]

  // Metadata
  published       Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  publishedAt     DateTime?

  @@index([slug])
  @@index([featured])
  @@index([published])
  @@index([order])
  @@index([published, createdAt])
  @@index([published, views])
  @@map("bundles")
}

// BUNDLE WORKFLOWS (junction table for bundle-workflow many-to-many)
model BundleWorkflow {
  bundle       Bundle   @relation(fields: [bundleId], references: [id], onDelete: Cascade)
  bundleId     String
  workflow     Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  workflowId   String
  order        Int      @default(0) // Order of workflow within the bundle

  @@id([bundleId, workflowId])
  @@index([bundleId])
  @@index([workflowId])
  @@map("bundle_workflows")
}

// SYSTEM SETTINGS
model SystemSetting {
  key         String   @id
  value       String   // JSON string or simple value
  description String?

  updatedAt   DateTime @updatedAt
  
  @@map("system_settings")
}

// SUBMISSIONS
model WorkflowSubmission {
  id              String   @id @default(cuid())
  workflowJson    Json
  category        String
  submitterName   String?
  contactEmail    String?
  authorUrl       String?
  status          SubmissionStatus @default(PENDING)
  createdAt       DateTime @default(now())
  
  @@map("workflow_submissions")
}

enum SubmissionStatus {
  PENDING
  REVIEWED
  REJECTED
}

// USER PORTFOLIO FEATURE

// Portfolio Workflows - Junction table linking users to workflows they want to showcase
model PortfolioWorkflow {
  id          String   @id @default(cuid())
  userId      String
  workflowId  String
  
  // Customization per portfolio
  featured    Boolean  @default(false) // Highlight this workflow
  order       Int      @default(0)     // Custom ordering in portfolio
  customTitle String?                  // Override workflow title
  customDesc  String?  @db.Text        // Override description
  caseStudy   String?  @db.Text        // Add case study/story
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  workflow    Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  
  @@unique([userId, workflowId])
  @@index([userId])
  @@index([workflowId])
  @@index([featured])
  @@map("portfolio_workflows")
}

// User Badges - Community verification and achievement badges
model UserBadge {
  id          String     @id @default(cuid())
  userId      String
  badgeType   BadgeType
  title       String               // e.g., "Verified Creator"
  description String               // Badge criteria
  icon        String               // Icon identifier
  color       String               // Badge color
  earnedAt    DateTime   @default(now())
  
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([badgeType])
  @@map("user_badges")
}

enum BadgeType {
  VERIFIED_CREATOR      // Manual verification by admin
  TOP_CONTRIBUTOR       // 10+ workflows published
  EXPERT_LEVEL          // 50+ workflows published
  RISING_STAR           // First 100 users with portfolios
  COMMUNITY_FAVORITE    // 100+ total upvotes
  DOWNLOAD_CHAMPION     // 1000+ total downloads
  EARLY_ADOPTER         // Beta tester badge
}

// Client Reviews - Testimonials and reviews from clients
model ClientReview {
  id              String   @id @default(cuid())
  
  // Who is being reviewed (portfolio owner)
  receiverId      String
  receiver        User     @relation("ReviewReceiver", fields: [receiverId], references: [id], onDelete: Cascade)
  
  // Who is giving the review (optional - can be anonymous)
  giverId         String?
  giver           User?    @relation("ReviewGiver", fields: [giverId], references: [id], onDelete: SetNull)
  
  // Review details
  clientName      String              // If not logged in, manual name
  clientCompany   String?             // Company name
  clientRole      String?             // Job title
  clientAvatar    String?             // Avatar URL
  
  rating          Int                 // 1-5 stars
  reviewText      String   @db.Text   // Testimonial
  projectType     String?             // What project they worked on
  
  // Verification
  verified        Boolean  @default(false)
  verifiedEmail   String?             // Email for verification
  
  // Visibility
  featured        Boolean  @default(false) // Show prominently
  approved        Boolean  @default(false) // Requires approval by receiver
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([receiverId])
  @@index([giverId])
  @@index([approved])
  @@index([featured])
  @@map("client_reviews")
}
